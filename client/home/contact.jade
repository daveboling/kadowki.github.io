#contact.row(name='contact')
  .col-xs-12.shroud
    .contactForms
      .contact_head YES, I AM FOR HIRE.
      .form.white
        .centered
          form(name='requestForm')
            label Name:
            input.cust_name(name='name', ng-model='email.name', placeholder='Your name')
            label E-Mail:
            input.email_name(name='email', ng-model='email.email', placeholder='you@gmail.com')
            label Phone:
            input.phone(ng-model='email.phone' placeholder='555-555-5555')
            textarea.message(name='message', ng-model='email.body', placeholder="Let's talk business.")
            button(style='display:block', ng-click='sendMail()').send Send
